<h1>Your Current List</h1>

<% if @lists.any? %>
  <h3>Here are your lists:</h3>

  <ul>
    <% @lists.each do |list| %>
      <li><a href="/list/<%= list.id()%>"><%= list.list %></a> </li>
    <% end %>
  </ul>

<% else %>
    <p>There are no lists yet!</p>
<% end %>

<h2>Add a new list:</h2>
<form action="/" method="post">
  <input type="text" name="list">
  <button type="submit">Create list</button>
</form>
